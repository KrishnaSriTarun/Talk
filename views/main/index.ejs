<% layout('./layouts/boilerplate.ejs') %>
<body style="display: flex; justify-content: center; align-items: center; margin: 1.5rem;">
  <div style="text-align: center;">
    <% for (let data of datas) { %>
      <div class="cards" style=" width: 28rem; margin: 1rem auto; padding: 1rem; border: none;">
        <% if (data.image) { %>
          <img src="<%= data.image %>" class="card-img-top" alt="Card image" style="width: 100%; height: auto;  margin-bottom: 1rem;">
        <% } else if (data.video) { %>
          <video controls style="width: 100%; margin-bottom: 1rem;">
            <source src="<%= data.video %>" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        <% } %>
        <div class="card-body">
          <p class="card-text" style=" color:rgb(250, 248, 248); line-height: 1.5; margin-bottom: 0.5rem;"><%= data.description %></p>
        </div>
      </div>
    <% } %>
  </div>
</body>
